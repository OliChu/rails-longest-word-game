<div class="container">
  <div class="wrapper">
    <div class="align-center">
      <div class="letter-wrapper">
        <ul class="list-inline">
        <% @grid.each do |letter| %>
          <li><div class="letter-box"><h1><%= letter %></h1></div></li>
        <% end %>
        </ul>
      </div>

      <div class="form-wrapper text-center">
        <form action="/score">
          <div class="form-content text-center">
            <input type="text" id="attempt" name="attempt" placeholder="What is your longuest word?" class="form-control">
            <input type="hidden" id="grid" name="grid" value=<%= @grid.join %>>
            <input type="hidden" name="start_time" value="<%= @start_time %>">
            <input type="submit" value="Enter" class="btn btn-primary btn-lg">
          </div>
          <%= link_to 'Play Again', '/', class:"btn btn-danger btn-lg text-center" %>
        </form>
      </div>

    </div>
  </div>
</div>
